<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DriverLines</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Cairo', sans-serif;
        }
        .navbar {
            background-color: #0056b3;
        }
        .navbar a {
            color: white !important;
        }
        footer {
            background-color: #003d80;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 50px;
        }
        .container {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">🚗 DriverLines</a>
            <div class="collapse navbar-collapse">
              <ul class="navbar-nav ms-auto">
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">إنشاء حساب</a>
    </li>
</ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>© 2025 DriverLines | جميع الحقوق محفوظة</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
@model IEnumerable<DriverLines.Data.Tables.Line>

@{
    ViewData["Title"] = "قائمة الخطوط";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        direction: rtl;
        font-family: 'Cairo', sans-serif;
        background-color: #f6f8fb;
    }

    .container-custom {
        max-width: 1150px;
        margin: 60px auto;
        background: #fff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(0,0,0,0.08);
    }

    h1 {
        color: #182848;
        text-align: center;
        font-weight: 700;
        margin-bottom: 30px;
    }

    .btn-primary {
        background: linear-gradient(90deg, #4b6cb7, #182848);
        border: none;
        padding: 10px 30px;
        border-radius: 30px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #182848, #4b6cb7);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    thead {
        background: linear-gradient(90deg, #182848, #4b6cb7);
        color: #fff;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #eee;
        vertical-align: middle;
    }

    tr:hover {
        background-color: #f1f4ff;
        transition: 0.2s;
    }

    .badge-active {
        background-color: #4caf50;
        color: #fff;
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 13px;
    }

    .badge-inactive {
        background-color: #f44336;
        color: #fff;
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 13px;
    }

    .actions a {
        text-decoration: none;
        margin: 0 5px;
        font-weight: 600;
    }

    .edit {
        color: #1565c0;
    }

    .details {
        color: #512da8;
    }

    .delete {
        color: #d32f2f;
    }
</style>

<div class="container-custom">
    <h1>🚘 قائمة الخطوط</h1>
    <div class="text-center mb-4">
        <form asp-action="Index" method="get" class="d-flex justify-content-center align-items-center">
            <input type="text" name="searchString" value="@ViewBag.CurrentFilter"
                   placeholder="🔍 ابحث عن خط، نوع السيارة،..."
                   class="form-control"
                   style="width: 300px; border-radius: 25px; margin-left: 10px; padding: 10px;" />
            <button type="submit" class="btn btn-primary" style="border-radius: 25px;">
                بحث
            </button>
        </form>
    </div>

    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary">➕ إضافة خط جديد</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>اسم المنطقة</th>
                <th>نوع السيارة</th>
                <th>رقم السيارة</th>
                <th>عدد المقاعد</th>
                <th>التبريد</th>
                <th>الملاحظات</th>
                <th>رقم الهاتف</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Area</td>
                    <td>@item.VehicleType</td>
                    <td>@item.VehicleNumber</td>
                    <td>@item.Capacity</td>
                    <td>@(item.Cooling ? "❄️ نعم" : "🔥 لا")</td>
                    <td>@item.Notes</td>
                    <td>@item.Phone</td>
                    <td class="actions">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="edit">تعديل</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="details">تفاصيل</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>